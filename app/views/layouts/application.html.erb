<!DOCTYPE html>
<html>
  <head>
    <title>WorksForMe</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
  <% if !(current_page?('/login') || current_page?('/logout') || current_page?('/users/new')) %>
    <header id="pageHeader">
        <% if current_user %>
          Welcome, <%= current_user.name %>
          &nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to 'Log Out', session_path('dummy'), method: :delete %>
        <% else %>
          <%= link_to 'Log In', login_path %>
          &nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to 'Sign Up', new_user_path %>
        <% end %>
      </p>
    </header>
    <article id="mainArticle">
      <%= yield %>
    </article>
    <nav id="mainNav">
      <h1>Dashboard</h1>
      <h3><%= link_to 'Create New Event', new_event_path %></h3>
      <h3><%= link_to 'My Events', events_path %></h3>
    </nav>
    <footer id="pageFooter">Works For Me</footer>
  <% else %>
    <article id="mainArticle">
      <%= yield %>
    </article>
  <% end %>
</body>

</html>
