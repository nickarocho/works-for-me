<div class="item1">
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th colspan="1"></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <strong>Title:</strong>
        <%= @event.title %>
      </td>
      <td>
        <strong>Location:</strong>
        <%= @event.location %>
      </td>
      <td>
        <% if current_user %>
          <% if current_user.id == @event.user.id %>
            <%= link_to 'Edit', edit_event_path(@event) %> |
            <%= link_to 'Back', events_path %> |
            <%= link_to 'Delete', @event, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
<div class="avails">
    <%= form_for @event do |f| %>
        <h3>Possible Times</h3>
        <ul>
          <%@event.availabilities.each do |avail|%>
            <li><%= avail.start.localtime.strftime("%c") %> - <%= avail.end.localtime.strftime("%c") %></li>
          <% end %>
        </ul>
    <% end %>

    <script type="text/javascript">
      localStorage.setItem('eventId', "<%= @event.id %>")
    </script>
</div>