<div class="item1">
  <% if @events.length == 0 %>
    <p>You don't have any events yet. <br> Why not <%= link_to 'create one?', new_event_path %></p>
  <% else %>
  <div>
    <h1>My Events</h1>
    <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Location</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.location %></td>
          <td><%= link_to 'View', event %> | </td> 
          <td><%= link_to 'Edit', edit_event_path(event) %> | </td> 
          <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
    <br>
    <%= link_to 'New Event', new_event_path %>
  </div>
  <% end %>
</div>