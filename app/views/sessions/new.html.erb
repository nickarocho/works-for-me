<article id="mainArticle">
  <h1>Log In</h1>
    <p id="alert"><%= alert %></p>
    <%= form_tag sessions_path do %>
    <div class="field">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </div>
    <div class="actions"><%= submit_tag "Log In" %></div>
    <div>
    <p><strong>Don't have an account yet? </strong>&nbsp;&nbsp;|&nbsp;&nbsp;
    <%= link_to 'Create New Account', new_user_path %></p>
  </div>
</article>
<% end %>